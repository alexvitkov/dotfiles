MODE=${1:-sxiv}

case $MODE in
    menu)
        WP="$(find ~/media/wallpapers | shuf | dmenu)"
        ;;
    *)
        DIR=$HOME/media/wallpapers/$1
        WP="$(find $DIR | shuf | sxiv -to -)"
        ;;
esac

if [ $? = 0 ] && [ ! -z "$WP" ]; then
    feh --bg-fill "$WP"
    magick "$WP" -resize 1920x1080^ -gravity center -extent 1920x1080 ~/.wallpaper.png
    feh --bg-scale ~/.wallpaper.png
    gencolors
fi
