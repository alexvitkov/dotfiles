CMD=${1:-'once'}

function barstring {
	I=4
	for fin in "$DOTFILES/bar/"*; do
		echo -en "â”‚ "
		sh $fin
		I=$(expr $I + 1)
		if [ $I -gt 8 ]; then
			I=4
		fi
        echo " "
	done
}

if [ $CMD = status ]; then
	cat ~/.local/bar/* | sh
elif [ $CMD = once ]; then
	xsetroot -name "$(barstring | tr -d '\n')"
else
	while true; do
		bar once
		sleep 10
	done
fi
